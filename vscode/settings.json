{
  "scm.diffDecorations": "none", // git diff editor decoration
  "json.maxItemsComputed": 8000,
  "terminal.integrated.scrollback": 10000,
  "[javascript]": {
    "editor.tabSize": 2
  },
  "[typescript]": {
    "editor.tabSize": 2
  },
  "[json]": {
    "editor.tabSize": 2
  },
  "terminal.integrated.tabs.enabled": true,
  "extensions.ignoreRecommendations": true,
  "diffEditor.renderSideBySide": false,
  "editor.minimap.enabled": false,
  "workbench.startupEditor": "none",
  "remote.autoForwardPortsSource": "hybrid",
  "git.openRepositoryInParentFolders": "always",
  "editor.codeLens": false,
  "editor.referenceInfos": false,
  "go.toolsManagement.autoUpdate": true,
  "deepl.formality": "default",
  "deepl.tagHandling": "off",
  "deepl.splitSentences": "1",
  "deepl.translationMode": "Replace",
  "deepl.defaultSourceLanguage": "EN-US",
  "deepl.defaultTargetLanguage": "JA",
  "dotnet.server.useOmnisharp": false
}
